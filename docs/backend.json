
{
  "entities": {
    "Product": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Product",
      "type": "object",
      "description": "Represents a product in the e-commerce store.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "slug": { "type": "string", "description": "URL-friendly version of the name" },
        "price": { "type": "number" },
        "imageUrl": { "type": "string", "format": "uri" },
        "description": { "type": "string" },
        "category": { "type": "string", "description": "Category of the product (e.g., Cl√°sicos, Especiales)" },
        "active": { "type": "boolean" },
        "stock": { "type": "number" }
      },
      "required": ["id", "name", "slug", "price", "imageUrl", "description", "category", "active", "stock"]
    },
    "Order": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Order",
      "type": "object",
      "description": "Represents a customer order.",
      "properties": {
        "id": { "type": "string" },
        "customerName": { "type": "string" },
        "customerPhone": { "type": "string" },
        "customerEmail": { "type": "string", "format": "email" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "price": { "type": "number" },
              "quantity": { "type": "number" }
            }
          }
        },
        "total": { "type": "number" },
        "status": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "customerName", "customerPhone", "items", "total", "status", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "products/{productId}",
        "definition": {
          "entityName": "Product",
          "schema": { "$ref": "#/backend/entities/Product" },
          "description": "Stores product information."
        }
      },
      {
        "path": "orders/{orderId}",
        "definition": {
          "entityName": "Order",
          "schema": { "$ref": "#/backend/entities/Order" },
          "description": "Stores order information."
        }
      },
      {
        "path": "roles_admin/{userId}",
        "definition": {
          "entityName": "roles_admin",
          "schema": { "type": "object" },
          "description": "Admin access control."
        }
      }
    ]
  }
}
